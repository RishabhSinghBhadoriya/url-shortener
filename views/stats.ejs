<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - URL Shortener</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <div class="container">
      <div class="header-content">
        <h1>ðŸ”— URL Shortener</h1>
        <nav>
          <a href="/" class="nav-link">Dashboard</a>
          <a href="/healthz" class="nav-link" target="_blank">Health</a>
        </nav>
      </div>
    </div>
  </header>

  <main class="container">
    <div class="breadcrumb">
      <a href="/">Dashboard</a> / <span>Stats - <%= link.code %></span>
    </div>

    <section class="stats-section">
      <div class="stats-header">
        <h2>Link Statistics</h2>
        <div class="stats-actions">
          <button onclick="copyShortLink()" class="btn btn-primary">
            Copy Short Link
          </button>
          <a href="/<%= link.code %>" target="_blank" class="btn">Visit Link</a>
        </div>
      </div>

      <!-- Main Stats Grid -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-label">Short Code</div>
          <div class="stat-value code-highlight"><%= link.code %></div>
        </div>

        <div class="stat-card">
          <div class="stat-label">Total Clicks</div>
          <div class="stat-value"><%= link.clicks.toLocaleString() %></div>
        </div>

        <div class="stat-card full-width">
          <div class="stat-label">Short URL</div>
          <div class="stat-value url-display">
            <a href="<%= baseUrl %>/<%= link.code %>" target="_blank">
              <%= baseUrl %>/<%= link.code %>
            </a>
          </div>
        </div>

        <div class="stat-card full-width">
          <div class="stat-label">Target URL</div>
          <div class="stat-value url-display">
            <a href="<%= link.url %>" target="_blank" class="break-word">
              <%= link.url %>
            </a>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-label">Created At</div>
          <div class="stat-value small-text">
            <%= new Date(link.createdAt).toLocaleString() %>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-label">Last Clicked</div>
          <div class="stat-value small-text">
            <%= link.lastClicked 
              ? new Date(link.lastClicked).toLocaleString() 
              : 'Never' 
            %>
          </div>
        </div>
      </div>

      <!-- Daily Stats Chart -->
      <% if (dailyStats && dailyStats.length > 0) { %>
      <div class="analytics-section">
        <h3>Clicks Over Time (Last 30 Days)</h3>
        <div class="chart-container">
          <canvas id="clicksChart"></canvas>
        </div>
      </div>
      <% } %>

      <!-- Recent Clicks Table -->
      <% if (recentClicks && recentClicks.length > 0) { %>
      <div class="recent-clicks-section">
        <h3>Recent Clicks (Last 100)</h3>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>Time</th>
                <th>IP Address</th>
                <th>User Agent</th>
                <th>Referrer</th>
              </tr>
            </thead>
            <tbody>
              <% recentClicks.forEach(click => { %>
                <tr>
                  <td><%= new Date(click.clicked_at).toLocaleString() %></td>
                  <td><%= click.ip_address || 'N/A' %></td>
                  <td class="user-agent-cell">
                    <%= click.user_agent ? click.user_agent.substring(0, 50) + '...' : 'N/A' %>
                  </td>
                  <td>
                    <% if (click.referrer) { %>
                      <a href="<%= click.referrer %>" target="_blank" class="referrer-link">
                        <%= click.referrer.substring(0, 40) %>...
                      </a>
                    <% } else { %>
                      Direct
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      <% } %>

      <div class="danger-zone">
        <h3>Danger Zone</h3>
        <p>Once you delete a link, it cannot be recovered. All analytics data will be permanently deleted.</p>
        <button onclick="deleteLink()" class="btn btn-danger">
          Delete This Link
        </button>
      </div>
    </section>
  </main>

  <footer>
    <div class="container">
      <p>&copy; 2024 URL Shortener. Built with Node.js & Express.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <script>
    const linkCode = '<%= link.code %>';
    const shortUrl = '<%= baseUrl %>/<%= link.code %>';

    // Chart for daily stats
    <% if (dailyStats && dailyStats.length > 0) { %>
      const dailyData = <%- JSON.stringify(dailyStats) %>;
      const ctx = document.getElementById('clicksChart');
      
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: dailyData.map(d => new Date(d.date).toLocaleDateString()).reverse(),
          datasets: [{
            label: 'Clicks',
            data: dailyData.map(d => parseInt(d.clicks)).reverse(),
            borderColor: '#4f46e5',
            backgroundColor: 'rgba(79, 70, 229, 0.1)',
            tension: 0.3,
            fill: true
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                precision: 0
              }
            }
          }
        }
      });
    <% } %>

    function copyShortLink() {
      navigator.clipboard.writeText(shortUrl).then(() => {
        alert('Short link copied to clipboard!');
      }).catch(() => {
        alert('Failed to copy link');
      });
    }

    async function deleteLink() {
      if (!confirm(`Are you sure you want to delete the link "${linkCode}"? This action cannot be undone and all analytics will be lost.`)) {
        return;
      }

      try {
        const response = await fetch(`/api/links/${linkCode}`, {
          method: 'DELETE'
        });

        if (response.ok) {
          alert('Link deleted successfully');
          window.location.href = '/';
        } else {
          const data = await response.json();
          alert('Error: ' + data.error);
        }
      } catch (error) {
        alert('Network error. Please try again.');
      }
    }
  </script>

  <style>
    .analytics-section {
      margin: 2rem 0;
      padding: 1.5rem;
      background-color: var(--bg-light);
      border-radius: 0.5rem;
    }

    .analytics-section h3 {
      margin-bottom: 1rem;
      color: var(--text-primary);
    }

    .chart-container {
      position: relative;
      height: 300px;
    }

    .recent-clicks-section {
      margin: 2rem 0;
    }

    .recent-clicks-section h3 {
      margin-bottom: 1rem;
      color: var(--text-primary);
    }

    .user-agent-cell {
      max-width: 200px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .referrer-link {
      color: var(--primary-color);
      text-decoration: none;
    }

    .referrer-link:hover {
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      .chart-container {
        height: 200px;
      }
      
      .user-agent-cell {
        max-width: 100px;
      }
    }
  </style>
</body>
</html>